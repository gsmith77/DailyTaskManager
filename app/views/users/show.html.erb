<% if @user.uid.present? %>
  <h1><%= @user.name %></h1>
  <h2>Email: <%= @user.email %></h2>
  <img src="<%= @user.image %>">
<% else %>
        <h1><%= current_user.name.capitalize %></h1><br>
        <h2>Email: <%= @user.email %></h2>
<% end %>
<%= @user.bio %><br><br><br>
        
<% current_user.lists.each do |list| %>
        Created On: <%= list.created_at.strftime("%A,  %b %d,  %Y") %>  <%= link_to "#{list.title}", user_list_path(current_user, list)%><br><br>
<% end %>
<%= link_to "Create New List", new_user_list_path(current_user) %><br><br><br><br>
<%= link_to "All Lists in Database", lists_path %><br><br>
<% if @user.lists.present? %>
  <%= link_to "Delete All Lists", user_destroy_lists_path(current_user), method: :delete, :confirm => 'Are you sure?' %>
  <%= link_to "All Lists", user_lists_path(current_user) %>
<% end %>
<%= link_to "Log Out", logout_path %>

